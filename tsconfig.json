{
    "compilerOptions": {
        "target": "es2022",
        "module": "esnext",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "types": [
            "node"
        ],
        "moduleResolution": "node",
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules"
    ]
}